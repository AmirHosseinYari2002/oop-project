                <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                    <stops>
                        <Stop>
                            <color>
                                <Color red="0.7166666388511658" green="1.0" />
                            </color>
                        </Stop>
                        <Stop offset="1.0">
                            <color>
                                <Color red="0.08483430743217468" green="0.7157894968986511" blue="0.3056686222553253" />
                            </color>
                        </Stop>
                    </stops>
                </RadialGradient>
            </fill>
        </Rectangle>
        <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="200.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../sample/pictures/loadtitle1.png" />
            </image>
        </ImageView>
        <Label alignment="CENTER" layoutX="258.0" layoutY="41.0" prefHeight="30.0" prefWidth="82.0" text="Sign up" textAlignment="CENTER" textFill="#e1ff00">
